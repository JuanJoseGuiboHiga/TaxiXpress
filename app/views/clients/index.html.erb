<%- model_class = Client -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name("Nombre") %></th>
      <th><%= model_class.human_attribute_name("Telefono") %></th>
      <th><%= model_class.human_attribute_name("Email") %></th>
          <th><%=t '.actions', :default => t("Opciones") %></th>
    </tr>
  </thead>
  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.no_client %></td>
        <td><%= client.telephone %></td>
        <td><%= client.email %></td>
         <td>
          <%= link_to t('.edit', :default => t("Editar")),
                      edit_client_path(client), :class => 'btn btn-success btn-xs' %>
          <%= link_to t('.destroy', :default => t("Eliminar")),
                      client_path(client),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_client_path,
            :class => 'btn btn-primary' %>
