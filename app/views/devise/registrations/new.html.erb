<div class='cuadroInformativo cuadroTextoMediano'>
    <h2 class="text-center titulo">
			<%= image_tag  "ayuda.png", :class => "usuario" %>
			Registro de Usuario
		</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true,placeholder:"Email", autofocus: true %>
    <%= f.input :password, required: true,placeholder:"Password", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation,placeholder:"Repita el password", required: true %>
  </div>

  <div class="form-actions">
    <%= f.submit "Sign up", :class => 'btn boton'  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
