<%= simple_form_for @route, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :description %>
  <%= error_span(@route[:description]) %>
  <%= f.input :origin %>
  <%= error_span(@route[:origin]) %>
  <%= f.input :end %>
  <%= error_span(@route[:end]) %>
  <%= f.input :price %>
  <%= error_span(@route[:price]) %>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                routes_path, :class => 'btn btn-default' %>
<% end %>
