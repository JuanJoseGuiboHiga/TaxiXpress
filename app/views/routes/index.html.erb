<div class="cuadroInformativo cuadroTextoGrande">
<%- model_class = Route -%>
<div class="page-header">
  <h1>Guia de Rutas</h1>
</div>
<table class="table">
  <thead>
    <tr>
       
     
      <th><%= model_class.human_attribute_name("Descripcion") %></th>
      <th><%= model_class.human_attribute_name("Origen") %></th>
      <th><%= model_class.human_attribute_name("Destino") %></th>
      <th><%= model_class.human_attribute_name("Precio") %></th>
        <% if current_administrator%>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @routes.each do |route| %>
      <tr>
         
        <td><%= route.description %></td>
        <td><%= route.origin %></td>
        <td><%= route.end %></td>
        <td><%= route.price %></td>
        <% if current_administrator%>
           <td>
          <%= link_to t('.edit', :default => t("Editar")),
                      edit_route_path(route), :class => 'btn btn-success btn-xs' %>
          <%= link_to t('.destroy', :default => t("Eliminar")),
                      route_path(route),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
                     
        </td>
         <% end %>
        
      </tr>
     
    <% end %>
  </tbody>
 
</table>

</div>