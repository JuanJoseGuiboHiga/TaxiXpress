<div class='contenedorsobre cuadroInformativo'>
<div class='contenedorPrincipal'>
  <h2 class="text-center titulo">
			<%= image_tag  "ayuda.png", :class => "taxista" %>
			Login Taxista
		</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true,placeholder:"Email" %>
    <%= f.input :password, required: false,placeholder:"Password" %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, "Log in" , :class => 'boton' %>
  </div>
<% end %>

<%= render "drivers/shared/links" %>
</div>
</div>
