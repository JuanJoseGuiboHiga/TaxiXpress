 <%- model_class = Driver -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name("Nombre") %>:</strong></dt>
  <dd><%= @driver.name_driver %></dd>
  <dt><strong><%= model_class.human_attribute_name("Telefono") %>:</strong></dt>
  <dd><%= @driver.telephone_driver %></dd>
  <dt><strong><%= model_class.human_attribute_name("Placa") %>:</strong></dt>
  <dd><%= image_tag @driver.picture.url(:medium) %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              drivers_path, :class => 'btn btn-default'  %>

